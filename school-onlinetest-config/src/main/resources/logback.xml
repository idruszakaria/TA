<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d %-5level %logger{35} - %msg %n</pattern>
		</encoder>
	</appender>

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<prudent>true</prudent>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- ganti file setiap jam -->
			<fileNamePattern>
				${catalina.home:-.}/logs/%d{yyyy-MM-dd_HH}/school-onlinetest-${spring.profiles.active:-development}.log
			</fileNamePattern>

			<!-- simpan file selama sebulan (24 * 31) -->
			<maxHistory>384</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d %-5level %logger{35} - %msg %n</pattern>
		</encoder>
	</appender>

	<include resource="logback-${spring.profiles.active:-development}.xml"/>

</configuration>

